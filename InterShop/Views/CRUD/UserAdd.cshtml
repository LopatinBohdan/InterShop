@{
    Layout = "_Layout";
}
@model User

<header>Add Form</header>

<form method="POST" asp-controller="CRUD" asp-action="Check">
    <label>Login</label><br />
    <input asp-for="Login" /><br />
    <label>Password</label><br />
    <input asp-for="Password" type="password" /><br />
    <label>Email</label><br />
    <input asp-for="Email" type="email" /><br />
    <label>Phone</label><br />
    <input asp-for="Phone" type="tel" /><br />
    <select asp-for="RoleId">Role
        <option value="1">Admin</option>
        <option value="2">Manager</option>
        <option value="3">User</option>
    </select>
    <button type="submit" class="btn btn-facebook">Add</button>
</form>
