@{
    Layout = "_Layout";
}
@model Product

<header>Product Info</header>

<img src="@ViewBag.photos[0].Path" class="card-img-top" alt="..." style="width:50%">
<ul>ProductInfo
    <li>Id: @Model.Id</li>
    <li>Title: @Model.Title</li>
    <li>Amount: @Model.Amount</li>
    <li>Category: @Model.Category</li>
    <li>Description: @Model.Description</li>
    <li>Price: @Model.Price</li>
</ul>


<div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false">
  <div class="carousel-inner">
    <div class="carousel-item active">
           <img src="@ViewBag.photos[0].Path" class="d-block w-100" alt="...">
    </div>
        @for (int i = 1; i < @ViewBag.photos.Count; i++)
        {
            <div class="carousel-item">
                <img src="@ViewBag.photos[i].Path" class="d-block w-100" alt="...">
            </div>
        }
        
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>







